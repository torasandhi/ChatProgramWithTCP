<Window x:Class="ChatClientTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatBox" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnToggleTheme" FontSize="10" Content="🌙" Click="btnToggleTheme_Click" Margin="157,0,0,10" Grid.Column="1"/>



        <!-- Bagian Atas: IP, Port, Username, Connect -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ChatBox" Width="95" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIP" Width="120" Text="127.0.0.1" Margin="0,0,5,0"/>
            <TextBox x:Name="txtPort" Width="60" Text="5000" Margin="0,0,5,0"/>
            <TextBox x:Name="txtUsername" Width="100" Text="Alice" Margin="0,0,5,0"/>
            <Button x:Name="btnConnect" Content="Connect" Width="84" Click="btnConnect_Click" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Bagian Tengah Kiri: Chat Log -->
        <ListBox x:Name="listBoxChat" Grid.Row="1" Grid.Column="0"/>

        <!-- Bagian Tengah Kanan: User Online -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Users Online" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListView x:Name="listViewUsers" Height="300"
                      SelectionMode="Single"
                      MouseDoubleClick="listViewUsers_MouseDoubleClick"/>
        </StackPanel>

        <!-- Bagian Bawah: Pesan + Send -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0">
            <TextBox x:Name="txtMessage" Width="400" Margin="0,0,5,0"/>
            <Button x:Name="btnSend" Content="Send" Width="80" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
